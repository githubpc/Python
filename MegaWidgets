import tkinter as tk
class AboutDialog:
    def __init__(self, master):
        self.master = master
        self.master.title('About Dialog')
        F = tk.Frame(self.master, width=200, height= 200)
        Btn = tk.Button(F, text='Close')
        Btn.pack()
        F.pack()
class ButtonBox(tk.Frame):
    def __init__(self, master):
        self.master = master
        self.master.title('Button Box')
        self.frame = tk.Frame(self.master)
        self.frame.pack()
    def AddButton(self, text, command, side):
        self.text = text
        self.command = command
        self.side = side
        Btn = tk.Button(self.frame, text=self.text, command=self.command)
        Btn.pack(side=self.side, padx=5, pady=5)
        
def NewWindow():
    newWindow = tk.Toplevel()
    newWindow1 = tk.Toplevel()
    AboutDialog(newWindow)
    Btn = ButtonBox(newWindow1)
    Btn.AddButton('open',Open, 'left') 
def Open():
    print('Open')        
root = tk.Tk()

btn = tk.Button(root, text='New Window', command=NewWindow )
btn.pack()
