<AnotherScreen>:
	name: "other"
	FloatLayout:
	Widgets
		id: widgets
	Button:
		color:0,1,0,1
		font_size: 15
		size_hint: None, None
		width: 100
		height: 40
		text: "Back Home"
		on_release: app.root.current = "main"
		pos_hint: {"right":1, "top":1}

