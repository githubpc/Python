#: import FadeTransition kivy.uix.screenmanager.FadeTransition
ScreenManagement:
	transition: FadeTransition()
	MainScreen:
	AnotherScreen:


<MainScreen>:
	name:"main"
	FloatLayout:
		Widgets
			id: widgets
		Button:
			color:0,1,0,1
			font_size: 15
			size_hint: None, None
			width: 100
			height: 40
			text: "Clear"
			pos_hint: {"right":1, "top":1}
			on_release: widgets.canvas.clear()
